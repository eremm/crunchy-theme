{
  "name": "crunchy-theme",
  "version": "1.0",
  "description": "Customizable theme for Crunchyroll",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.crunchyroll.com/*"
      ],
      "js": [
        "chrome-extension-async.js",
        "theme.js",
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}